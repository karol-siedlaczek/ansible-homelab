[Unit]
Description={{ name }}
After=syslog.target network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User={{ name }}
Group={{ name }}
ExecStart={{ service.start_command }}
SyslogIdentifier={{ name }}
Environment="{{ service.environment }}"
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
